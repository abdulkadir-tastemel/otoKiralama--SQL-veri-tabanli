@model IEnumerable<RentCars.Models.rezervasyonlar>
@model IEnumerable<RentCars.Models.carsTable>


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/still.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body>
    <h1>Abdüş oto</h1>
    <h3>Araç Listesi</h3>
    <table class="table" border="1" cellpadding="5" cellspacing="0" width="600">
        <tr>
            <th>ARAÇ RESMİ</th>
            <th>
                REZERVASYON ID
            </th>
            <th>
                ALMA TARİHİ
            </th>
            <th>
                TESLİM TARİHİ
            </th>
            <th>
                ÜCRET
            </th>
            <th>
                İPTAL Mİ
            </th>
            <th>
                İPTAL TARİHİ
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        var dir = "~/VehicleImages/" + item.Id + ".jpg";
                        <img src="@Url.Content(dir)" width="100" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rezervasyonId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AlmaTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeslimTarihi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ucret) TL
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.iptalmi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.iptaltarihi)
                </td>
                <td>

                    @Html.ActionLink("Detay", "Details", new { id = item.Id }) |

                </td>
            </tr>
        }

    </table>

    <p>
        @Html.ActionLink("Profil", "Profil") |
        @Html.ActionLink("Oturumu Kpat", "cikis") |
        @Html.ActionLink("Rezervasyonlarım", "Index", "rezervation") |
        @Html.ActionLink("Araçlar", "Index", "vehicle") |
    </p>

</body>
</html>
